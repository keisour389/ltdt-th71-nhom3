<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.lalafood">
    <!-- Bật quyền sử dụng internet để lấy API từ heroku -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme2">
        <activity
            android:name="com.example.lalafood.Customers.Activity.CustomerMainSearch"
            android:screenOrientation="sensorPortrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name="com.example.lalafood.Customers.Activity.RestaurantsDishes"
            android:screenOrientation="sensorPortrait"
            tools:ignore="LockedOrientationActivity"/>
        <activity
            android:name="com.example.lalafood.Customers.Activity.CustomerSearchedRestaurant"
            android:screenOrientation="sensorPortrait"
            tools:ignore="LockedOrientationActivity"/>
        <activity
            android:name="com.example.lalafood.Customers.Activity.CustomerOrderCompleted"
            android:screenOrientation="sensorPortrait"
            tools:ignore="LockedOrientationActivity"/>
        <activity
            android:name="com.example.lalafood.Login.Activity.MainLogin"
            android:theme="@style/AppTheme"
            android:screenOrientation="sensorPortrait"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- orders -->
        <activity
            android:name="com.example.lalafood.Shippers.Activity.ShippersMainActivity"
            android:screenOrientation="sensorPortrait"
            tools:ignore="LockedOrientationActivity"/>
        <activity
            android:name="com.example.lalafood.Shippers.Activity.GetOrderActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait"
            tools:ignore="LockedOrientationActivity"/> <!-- Login -->
        <activity
            android:name="com.example.lalafood.Login.Activity.SignInAndSignUp"
            android:theme="@style/AppTheme"
            android:screenOrientation="sensorPortrait"
            tools:ignore="LockedOrientationActivity"/>
        <activity
            android:name="com.example.lalafood.Login.Activity.CreatePassword"
            android:screenOrientation="sensorPortrait"
            tools:ignore="LockedOrientationActivity"/>
        <activity
            android:name="com.example.lalafood.Login.Activity.LoginPassword"
            android:screenOrientation="sensorPortrait"
            tools:ignore="LockedOrientationActivity"/>
        <activity
            android:name="com.example.lalafood.Login.Activity.CreatePhoneNumber"
            android:screenOrientation="sensorPortrait"
            tools:ignore="LockedOrientationActivity"/>
        <activity
            android:name="com.example.lalafood.Login.Activity.LoginPhoneNumber"
            android:screenOrientation="sensorPortrait"
            tools:ignore="LockedOrientationActivity"/>
        <activity
            android:name="com.example.lalafood.Login.Activity.FormCreateAccount"
            android:screenOrientation="sensorPortrait"
            tools:ignore="LockedOrientationActivity"/>
    </application>

</manifest>