<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shippers.login.Activity.CreatePassword">
    <View
        android:background="@color/colorOrange"
        android:layout_width="match_parent"
        android:layout_height="2dp"></View>
    <Button
        android:id="@+id/btnTiepTheoDangKyForm"
        android:layout_width="401dp"
        android:layout_height="51dp"
        android:layout_marginTop="320dp"
        android:background="@color/colorOrange"
        android:text="Tiếp theo"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="392dp"
        android:layout_height="41dp"
        android:layout_marginTop="36dp"
        android:text="Hãy nhập mật khẩu của bạn!"
        android:textColor="@color/colorOrange"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.263"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtLMatKhauDangKy"
        android:layout_width="401dp"
        android:layout_height="88dp"
        android:layout_marginTop="88dp"
        android:hint="Mật khẩu người đăng ký"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        app:errorEnabled="true"
        app:hintEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtEMatKhauDangKy"
            android:layout_width="388dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
            android:enabled="true"
            android:maxLength="20"
            android:password="true"
            android:textColor="@color/colorOrange"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="101dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtLNhapLaiMatKhauDangKy"
        android:layout_width="401dp"
        android:layout_height="88dp"
        android:layout_marginTop="192dp"
        android:hint="Nhập lại mật khẩu người đăng ký"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        app:errorEnabled="true"
        app:hintEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtENhapLaiMatKhauDangKy"
            android:layout_width="388dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
            android:enabled="true"
            android:maxLength="20"
            android:password="true"
            android:textColor="@color/colorOrange"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="173dp" />

    </com.google.android.material.textfield.TextInputLayout>


</androidx.constraintlayout.widget.ConstraintLayout>